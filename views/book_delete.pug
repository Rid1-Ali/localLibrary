extends layout

block content
    h1 #{title}: #{book.name}


    if book_instances.length

        p #[ Delete the following books instances before attempting to delete this author.]

        div(style='margin-left:20px; margin-top: 20px')

            h4 Books Instances
            p #{book_instances.length}
            dl
            each bookinstance in book_instances
                dt
                    a(href=bookinstance.url) #{bookinstance.book.title}
                dd #{bookinstance.book.summary}
    else
        p Do you really want to delete this Book?
        p #{book_instances.length}
        form(action="", method="POST")
            div.form-group
                input#bookid.form-control(type='hidden', name='bookid', required='true', value=book._id)
            button.btn.btn-primary(type='submit') Delete